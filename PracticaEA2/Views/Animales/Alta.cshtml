@model DAL.Animal
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <meta name="viewport" content="width=device-width" />
    <title>Alta</title>
</head>
<body>
    <form action="/Animales/Alta" method="post">
        <div>
            Nombre Especie:
            @Html.EditorFor(o => o.NombreEspecie)
            @Html.ValidationMessageFor(o=> o.NombreEspecie)
        </div>
        <div>
            Peso Promedio:
            @Html.EditorFor(o => o.PesoPromedio)
            @Html.ValidationMessageFor(o => o.PesoPromedio)
        </div>
        <div>
            Edad Promedio:
            @Html.EditorFor(o => o.EdadPromedio)
            @Html.ValidationMessageFor(o => o.EdadPromedio)
        </div>
        <div>
            @Html.Partial("~/Views/Animales/pvComboTipoAnimales.cshtml")
            @Html.ValidationMessageFor(o => o.IdTipoAnimal)
        </div>
        <div>
            <input type="submit" value="Guardar" />
        </div>
    </form>
    <div> 
    </div>
</body>
</html>
